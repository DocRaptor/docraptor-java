#!/bin/bash
set -e
cd "$(dirname "$0")/../.."

cd test

# runs a test file with PASS/FAIL message
run_test() {
  export TEST_NAME="$(basename "$1")"
  ../script/run_java_file $PWD/$1 && echo "PASS $1" || (echo "FAIL $1"; exit 1)
}

if [ "$1" == "" ]; then
  for test in $(ls *.java); do
    run_test $test
  done
else
  run_test $1.java
fi
